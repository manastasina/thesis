title = {{Spatiotemporal regulation of MyD88-IRF-7 signalling for robust type-I interferon induction.}},
volume = {434},
year = {2005}
}
@article{Tschopp2010,
abstract = {The NLR family, pyrin domain-containing 3 (NLRP3) inflammasome is a multiprotein complex that activates caspase 1, leading to the processing and secretion of the pro-inflammatory cytokines interleukin-1beta (IL-1beta) and IL-18. The NLRP3 inflammasome is activated by a wide range of danger signals that derive not only from microorganisms but also from metabolic dysregulation. It is unclear how these highly varied stress signals can be detected by a single inflammasome. In this Opinion article, we review the different signalling pathways that have been proposed to engage the NLRP3 inflammasome and suggest a model in which one of the crucial elements for NLRP3 activation is the generation of reactive oxygen species (ROS).},
