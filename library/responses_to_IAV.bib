issn = {0021-9258},
journal = {Journal of Biological Chemistry},
pages = {5571--5580},
pmid = {15579900},
title = {{Involvement of toll-like receptor 3 in the immune response of lung epithelial cells to double-stranded RNA and influenza A virus.}},
volume = {280},
year = {2005}
}
