keywords = {Animals,Binding Sites,Cell Line,Dogs,Enzyme Activation,Gene Deletion,Influenza A virus/ genetics/growth \& development/,Mice,Mutation,Phenotype,RNA, Viral/ biosynthesis/genetics,Time Factors,Viral Nonstructural Proteins/ chemistry/genetics/,eIF-2 Kinase/ antagonists \& inhibitors/genetics/me},
language = {eng},
