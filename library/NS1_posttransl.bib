isbn = {1934-6069 (Electronic) 1931-3128 (Linking)},
journal = {Cell Host and Microbe},
number = {4},
pages = {484--493},
pmid = {24721576},
title = {{Cellular DDX21 RNA Helicase Inhibits Influenza A Virus Replication but Is Counteracted by the Viral NS1 Protein}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/24721576},
volume = {15},
year = {2014}
