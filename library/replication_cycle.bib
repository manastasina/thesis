file = {:Users/Masha/Library/Application Support/Mendeley Desktop/Downloaded/Reis, McCauley - 2013 - The Influenza Virus Protein PB1-F2 Interacts with IKK$\beta$ and Modulates NF-$\kappa$B Signalling.pdf:pdf},
issn = {19326203},
