pages = {1254--1264},
pmid = {19906916},
title = {{Nuclear import and assembly of the influenza A virus RNA polymerase studied in live cells by Fluorescence Cross Correlation Spectroscopy}},
url = {http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?cmd=Retrieve\&db=PubMed\&dopt=Citation\&list\_uids=19906916},
