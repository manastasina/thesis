journal = {Virology},
keywords = {Cleavage And Polyadenylation Specificity Factor,Gene Expression Regulation,Humans,Influenza A virus,Interferon-alpha,Interferon-beta,Messenger,Protein Binding,RNA,RNA Precursors,Viral,Viral Nonstructural Proteins,Virus Replication,genetics,metabolism,physiology},
