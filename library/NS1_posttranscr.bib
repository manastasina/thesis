month = mar,
number = {2},
pages = {386--395},
pmid = {12667806},
title = {{Cellular antiviral responses against influenza A virus are countered at the posttranscriptional level by the viral NS1A protein via its binding to a cellular protein required for the 3' end processing of cellular pre-mRNAS.}},
