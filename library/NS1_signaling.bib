doi = {10.1073/pnas.0606109103},
isbn = {0027-8424 (Print)$\backslash$r0027-8424 (Linking)},
issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences of the USA},
pages = {14194--14199},
pmid = {16963558},
title = {{Influenza A virus NS1 protein binds p85beta and activates phosphatidylinositol-3-kinase signaling.}},
volume = {103},
year = {2006}
}
