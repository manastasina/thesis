journal = {Journal of Biological Chemistry},
pages = {1372--1380},
pmid = {18029356},
title = {{Binding of influenza a virus NS1 protein to the inter-SH2 domain of p85?? suggests a novel mechanism for phosphoinositide 3-kinase activation}},
volume = {283},
year = {2008}
}
