journal = {Journal of Virology},
pages = {3058--3067},
pmid = {17229704},
title = {{Influenza A virus NS1 protein activates the PI3K/Akt pathway to mediate antiapoptotic signaling responses.}},
volume = {81},
year = {2007}
}
