journal = {Cellular Microbiology},
pages = {831--843},
pmid = {20088952},
title = {{CRK adaptor protein expression is required for efficient replication of avian influenza A viruses and controls JNK-mediated apoptotic responses}},
volume = {12},
year = {2010}
}
