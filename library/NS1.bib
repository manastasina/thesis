journal = {Proceedings of the National Academy of Sciences of the USA},
pages = {1857--1861},
pmid = {6246509},
title = {{Mapping of the two overlapping genes for polypeptides NS1 and NS2 on RNA segment 8 of influenza virus genome.}},
volume = {77},
year = {1980}
}
